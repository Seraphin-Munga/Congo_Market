    <script>
        $(document).ready(function () {
            /*
            var defaults = {
                containerID: 'toTop', // fading element id
                containerHoverID: 'toTopHover', // fading element hover id
                scrollSpeed: 1200,
                easingType: 'linear'
            };
            */
            $().UItoTop({
                easingType: 'easeOutQuart'
            });


            $("#btnSearch").click(function () {
                window.location = "Post/Title?title=" + $("#SearchPost").val();
            })

            let cache = {};


            $("#SearchPost").autocomplete({
                source: function (request, response) {
                    var term = request.term;
                    if (term in cache) {
                        response(cache[term]);
                        return;
                    }
                    $.ajax({
                        url: "/Post/DB_Post_Search",
                        dataType: "json",
                        data: {
                            searchTerm: request.term,
                            provinceID: $("#agileinfo-nav_search").val()
                        },
                        success: function (data) {

                            $.each(data, function (index, item) {
                                item.value = item.title;
                            });
                            cache[term] = data; // caching the data if data exisi.
                            response(data);
                        }
                    });
                },
                minLength: 2,
                select: function (event, ui) {

                    window.location = "Post/Title?title=" + ui.item.title
                        ;

                }
            }).autocomplete("instance")._renderItem = function (ul, item) { // Rendering customization.
                debugger
                return $("<li>")
                    .append("<div>" + item.title + "<hr>" + "</div>")
                    .appendTo(ul);
            };



        });
    </script>
    <!-- //smooth-scrolling-of-move-up -->
