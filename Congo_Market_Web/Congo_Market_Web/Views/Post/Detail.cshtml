@model Congo_Market_Web.Models.PostModel



<div class="banner-bootom-w3-agileits py-5">
    <div class="container py-xl-4 py-lg-2">
        <!-- tittle heading -->
        <h3 class="tittle-w3l text-center mb-lg-5 mb-sm-4 mb-3">
            @Model.title
        </h3>
        <!-- //tittle heading -->
        <div class="row">
            <div class="col-lg-5 col-md-8 single-right-left ">
                <div class="grid images_3_of_2">
                    <div class="flexslider">
                        <ul class="slides">

                            <li data-thumb="/productsImages/@Model.postID/@Model.imagelink">
                                <div class="thumb-image">
                                    <img src="/productsImages/@Model.postID/@Model.imagelink" data-imagezoom="true" class="img-fluid" alt="">
                                </div>
                            </li>


                            @foreach (var item in ViewBag.images)
                            {
                                <li data-thumb="/productsImages/@item.Image_postID/@item.Image_ImageLinks">
                                    <div class="thumb-image">
                                        <img src="/productsImages/@item.Image_postID/@item.Image_ImageLinks" data-imagezoom="true" class="img-fluid" alt="">
                                    </div>
                                </li>
                            }


                        </ul>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>

            <div class="col-lg-7 single-right-left simpleCart_shelfItem">
                <h3 class="mb-3">@Model.title</h3>
                <p class="mb-3">
                    <span class="item_price">Fc @Model.price</span>
                </p>

                <div class="single-infoagile">
                    <ul>
                        <li class="mb-3">
                            Prix:   Fc @Model.price
                        </li>
                        <li class="mb-3">
                            Numero: @Model.telephone
                        </li>
                        <li class="mb-3">
                            Date : @Model.date
                        </li>
                        <li class="mb-3">
                            Ville : @Model.ville;
                        </li>
                    </ul>
                </div>

                @if (Model.surfaceSize != null)
                {

                    <div class="single-infoagile">
                        <ul>
                            <li class="mb-3">
                                Chambre : @Model.bethroom
                            </li>
                            <li class="mb-3">
                                Salle de bains : @Model.bathroom
                            </li>
                            <li class="mb-3">
                                Nombre de parking: @Model.numberOfParking
                            </li>
                            <li class="mb-3">
                                Taille de la surface : @Model.surfaceSize;
                            </li>
                        </ul>
                    </div>
                }



                @if (Model.surfaceSize != null)
                {

                    <div class="single-infoagile">
                        <ul>
                            <li class="mb-3">
                                Chambre : @Model.bethroom
                            </li>
