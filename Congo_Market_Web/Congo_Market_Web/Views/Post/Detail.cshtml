                                Salle de bains : @Model.bathroom
                            </li>
                            <li class="mb-3">
                                Nombre de parking: @Model.numberOfParking
                            </li>
                            <li class="mb-3">
                                Taille de la surface : @Model.surfaceSize;
                            </li>
                        </ul>
                    </div>
                }



                @if (Model.mileage != null)
                {

                    <div class="single-infoagile">
                        <ul>
                            <li class="mb-3">
                                Kilométrage : @Model.mileage
                            </li>
                            <li class="mb-3">
                                Mark : @Model.makeName
                            </li>
                            <li class="mb-3">

                                Couleur: @Model.color
                            </li>
                     
                        </ul>
                    </div>
                }




                <div class="product-single-w3l">
